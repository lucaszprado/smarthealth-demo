

<div class="mx-auto max-w-7xl px-4 py-5">
  <div class="flex justify-center">
    <div class="w-full lg:w-9/12">
      <h1 class="text-3xl my-10 flex justify-center">Olá, <%= @human.name %>!</h1>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <%= link_to human_biomarkers_path(@human, types: ["blood"]), class: "no-underline" do %>
          <div class="bg-white rounded-xl p-5 shadow-sm space-y-2 flex flex-col items-center mx-3 md:mx-0">
            <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
              <i class="fa-solid fa-droplet text-blue-500"></i>
            </div>
            <p class="font-medium">Sangue</p>
            <!--p class="text-sm text-gray-500">
              97 biomarcadores
            </p-->
          </div>
        <% end %>
        <%= link_to human_imaging_reports_path(@human), class: "no-underline" do %>
          <div class="bg-white rounded-xl p-5 shadow-sm space-y-2 flex flex-col items-center mx-3 md:mx-0" >
            <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
              <i class="fa-solid fa-circle-radiation text-purple-500"></i>
            </div>
            <p class="font-medium">Imagem</p>
            <!--p class="text-sm text-gray-500">
              12 exames
            </p-->
          </div>
        <% end %>
        <%= link_to human_biomarkers_path(@human, types: ["bioimpedance"]), class: "no-underline" do %>
          <div class="bg-white rounded-xl p-5 shadow-sm space-y-2 flex flex-col items-center mx-3 md:mx-0">
            <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
              <i class="fa-solid fa-weight-scale text-orange-400"></i>
            </div>
            <p class="font-medium">Bioimpedância</p>
            <!--p class="text-sm text-gray-500">
              3 biomarcadores
            </p-->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

 <!-- Bottom Nav -->
<% content_for :navbar_bottom do %>
  <%= render 'shared/navbar_bottom' %>
<% end %>
